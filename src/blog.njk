---
title: Blog
heroTitle: Blog
layout: "base.njk"
---

{% include "interior-hero.njk" %}

<section class="blog">
  <div class="blog_container">

  {# List of Blog Posts Collection for Blog Page #}
    <div class="blog_container-posts">
    {% for post in collections.post %}
      <article class="article-items">

        <picture class="article_pic">
          <!-- Mobile Image -->
          <source media="(max-width: 600px)" 
                  srcset="{% getUrl post.data.image | resize({ width: 400 }) | avif %}" 
                  type="image/avif">
          <source media="(max-width: 600px)" 
                  srcset="{% getUrl post.data.image | resize({ width: 400 }) | webp %}" 
                  type="image/webp">
          <source media="(max-width: 600px)" 
                  srcset="{% getUrl post.data.image | resize({ width: 400 }) | jpeg %}" 
                  type="image/jpeg">

          <!-- Tablet Image -->
          <source media="(max-width: 1024px)" 
                  srcset="{% getUrl post.data.image | resize({ width: 700 }) | avif %}" 
                  type="image/avif">
          <source media="(max-width: 1024px)" 
                  srcset="{% getUrl post.data.image | resize({ width: 700 }) | webp %}" 
                  type="image/webp">
          <source media="(max-width: 1024px)" 
                  srcset="{% getUrl post.data.image | resize({ width: 700 }) | jpeg %}" 
                  type="image/jpeg">

          <!-- Desktop Image -->
          <source media="(min-width: 1024px)" 
                  srcset="{% getUrl post.data.image | resize({ width: 1200 }) | avif %}" 
                  type="image/avif">
          <source media="(min-width: 1024px)" 
                  srcset="{% getUrl post.data.image | resize({ width: 1200 }) | webp %}" 
                  type="image/webp">
          <source media="(min-width: 1024px)" 
                  srcset="{% getUrl post.data.image | resize({ width: 1200 }) | jpeg %}" 
                  type="image/jpeg">

          <img src="{% getUrl post.data.image | resize({ width: 1200 }) | jpeg %}" alt="{{ post.data.imageAlt }}" width="1200" loading="lazy" decoding="async">
        </picture>

        <div class="article-item_text">
          	<div class="article_meta">
				<p>{{ post.data.author }}</p>
				<div class="separator"></div>
				<p>{{ post.date | postDate }}</p>
          	</div>
          	<h2>{{ post.data.title }}</h2>
          	<p class="post-description">{{ post.data.description | safe }}</p>
          	<button class="cs-button blog-button"><a class="cs-button_link" href="{{ post.url }}">Continue Reading</a></button>
        </div>

      </article>
    {% endfor %}
    </div>
    {# End List of Blog Posts Collection for Blog Page #}

    {# Sidebar #}
    <div class="blog_container-side">
        <div class="featured-posts_header">
		    <h3>FEATURED POSTS</h3>
		    <div class="header_underline"></div>
		</div>
		{% for post in collections.featured %}
		<a href="{{ post.url }}" class="cs-button_link">
			<div class="side_featured-posts">
				<div class="featured-post_item">
					<img src="{% getUrl post.data.image | resize({ width: 70 }) | jpeg %}" alt="{{ post.data.imageAlt }}" width="70" loading="lazy" decoding="async">
					<div class="post_meta">
						<h4>{{ post.data.title }}</h4>
						<p>{{ post.date | postDate }}</p>
					</div>
					<svg class="book-icon" viewBox="0 0 24 24" fill="none"xmlns="http://www.w3.org/2000/svg"><path d="M12 6.90909C10.8999 5.50893 9.20406 4.10877 5.00119 4.00602C4.72513 3.99928 4.5 4.22351 4.5 4.49965C4.5 6.54813 4.5 14.3034 4.5 16.597C4.5 16.8731 4.72515 17.09 5.00114 17.099C9.20405 17.2364 10.8999 19.0998 12 20.5M12 6.90909C13.1001 5.50893 14.7959 4.10877 18.9988 4.00602C19.2749 3.99928 19.5 4.21847 19.5 4.49461C19.5 6.78447 19.5 14.3064 19.5 16.5963C19.5 16.8724 19.2749 17.09 18.9989 17.099C14.796 17.2364 13.1001 19.0998 12 20.5M12 6.90909L12 20.5" stroke-linejoin="round"></path><path d="M19.2353 6H21.5C21.7761 6 22 6.22386 22 6.5V19.539C22 19.9436 21.5233 20.2124 21.1535 20.0481C20.3584 19.6948 19.0315 19.2632 17.2941 19.2632C14.3529 19.2632 12 21 12 21C12 21 9.64706 19.2632 6.70588 19.2632C4.96845 19.2632 3.64156 19.6948 2.84647 20.0481C2.47668 20.2124 2 19.9436 2 19.539V6.5C2 6.22386 2.22386 6 2.5 6H4.76471" stroke-linejoin="round"></path></svg>
				</div>
			</div>
		</a>
		<div class="underline"></div>
		{% endfor %}
    </div>
    {# End Sidebar #}
    
  </div>

</section>

